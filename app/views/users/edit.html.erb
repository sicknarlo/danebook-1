<%= render partial: "static_pages_controller/navbar" %>
<main>

  <!-- Profile Header -->

  <%= render partial: "static_pages_controller/menu", :locals => { :active => 'About', first_name: @user.first_name, last_name: @user.last_name } %>

  <!-- /profile header -->


  <!-- Main Content -->

  <div class="container">

    <div class="row test">

      <div class="col-xs-2 col-xs-offset-5">

        <h3>About</h3>

      </div>

      <div class="col-xs-5 edit-btn">

      <%= link_to "Edit Your Profile", edit_user_path, class: "btn btn-primary pull-right" %>

      </div>

    </div>

    <div class="row main-content">

      <div class="col-md-6">

        <div class="row">

          <div class="col-xs-12">
            <%= form_for @user do |f| %>

            <h3>Basic Information</h3>

          </div>

          <div class="col-xs-6">

            <strong>Birthday:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.date_select :birthday %>

          </div>

          <div class="col-xs-6">

            <strong>College:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.text_field :college %>

          </div>

          <div class="col-xs-6">

            <strong>Hometown:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.text_field :hometown %>>

          </div>

          <div class="col-xs-6">

            <strong>Currently Lives:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.text_field :current_town %>

          </div>

          <div class="col-xs-12">

            <h3>Contact Information</h3>

          </div>

          <div class="col-xs-6">

            <strong>Email:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.text_field :email %>

          </div>

          <div class="col-xs-6">

            <strong>Telephone:</strong>

          </div>

          <div class="col-xs-6">

            <%= f.text_field :telephone %>

          </div>

        </div>

      </div>

      <div class="col-md-6">

        <div class="row">

          <div class="col-xs-12">

            <h3>Words to Live By</h3>

          </div>

          <div class="col-xs-12">

            <p><%= f.text_area :words_to_live_by %></p>

          </div>

          <div class="col-xs-12">

            <h3>About Me</h3>

          </div>

          <div class="col-xs-12">

            <p><%= f.text_area :about_me %></p>

          </div>

          <%= f.submit "Save Changes" %>

          <% end %>

        </div>

        <hr>

      </div>

    </div>

  </div>

</main>
